<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    tools:context=".ui.connectivity.ConnectivityFragment">

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Idle..."
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textPosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Position Unavailable"
        android:textAlignment="center"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textGimbalImageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking status..."
        app:layout_constraintEnd_toEndOf="@+id/imageGimbalStatus"
        app:layout_constraintStart_toStartOf="@+id/imageGimbalStatus"
        app:layout_constraintTop_toBottomOf="@+id/imageGimbalStatus" />

    <ImageView
        android:id="@+id/imageGimbalStatus"
        android:layout_width="220dp"
        android:layout_height="237dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutConnectivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutConnectivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutConnectivityGimbal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonBluetoothSetup"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#444543"
                android:text="Setup" />

            <ImageView
                android:id="@+id/imageGimbal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ak2000" />

            <TextView
                android:id="@+id/textConnectivityGimbal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gimbal"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textConnectivityGimbalSsid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Not Selected" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_connect_gimbal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutConnectivityCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWifiSetup"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#444543"
                android:text="Setup" />

            <ImageView
                android:id="@+id/imageCamera"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/textConnectivityCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Camera"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textConnectivityCameraSsid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Not Selected" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/button_connect_camera"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Connect" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>