<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.camera.fragments.tracker.CameraTrackingFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Tracker:" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_group_tracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tracker_off"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tracker_mediapipe"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mediapipe" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tracker_opencv"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OpenCV" />

                <!-- Add more buttons as needed -->
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select Detector:" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_group_detector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_detector_off"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_detector_pose"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pose" />

                <!-- Add more buttons as needed -->
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:text="Tracking Offset:" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <View
                    android:id="@+id/view_rule_of_thirds_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ruleofthirds"
                    android:clickable="false"
                    android:focusable="false" />

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:rowCount="3">

                    <!-- Top-left: Rule of Thirds -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRuleTopLeft"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="⬊"
                        android:textSize="34sp" />

                    <!-- Top-center: Tilt Decrease -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTiltDecr"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Tilt -" />

                    <!-- Top-right: Rule of thirds -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRuleTopRight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="⬋"
                        android:textSize="34sp" />

                    <!-- Middle-left: Pan Decrease -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPanDecr"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Pan -" />

                    <!-- Middle-center: Center TextView -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonOffsetReset"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Tilt: 0\nPan: 0"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <!-- Middle-right: Pan Increase -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPanIncr"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Pan +" />

                    <!-- Bottom-left: Rule of thirds -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRuleBottomLeft"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="⬈"
                        android:textSize="34sp" />

                    <!-- Bottom-center: Tilt Increase -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTiltIncr"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Tilt +" />

                    <!-- Bottom-right: Rule of thirds -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRuleBottomRight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="⬉"
                        android:textSize="34sp" />

                </GridLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>